<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Home</title>

    <base href="/" />
    <link rel="stylesheet" href="index.css">
    <link rel="stylesheet" href="semester.css">
    <link rel="stylesheet" href="syllabus.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://www.parsecdn.com/js/parse-1.4.2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

    <script src="semester.js" defer></script>
    <script src="semester2.js" defer></script>


</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow" style="margin-bottom: .1em;">
        <div class="container-fluid">
            <div class="logo1"><img src="img/mainlogo.svg" alt=""></div>
            <a class="navbar-brand" href="#">UniTrack</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/index.hbs">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about.hbs">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/roadmaps.hbs">Roadmaps</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>

                </ul>
                <li class="nav-item dropdown d-flex ">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img class="imgpro" src="img/profile-user.png" class="rounded-circle">
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="/profile.hbs">Edit Profile</a>
                        <a class="dropdown-item" href="/users/logout">Log Out</a>
                    </div>
                </li>
            </div>
        </div>
    </nav>

    {{!-- For each user display this dashboard home --}}
    {{#each userrow}}


    <div class="left-fixednav">
        <div class="profilepic-big-div">
            <img src="https://t4.ftcdn.net/jpg/03/64/21/11/360_F_364211147_1qgLVxv1Tcq0Ohz3FawUfrtONzz8nq3e.jpg" alt=""
                class="profilepic-big" />
        </div>
        <hr class="divider">

        <div class="options-sidebar">
            <ul class="nav nav-pills flex-column mb-auto">

                <li>
                    <a href="" class="nav-link text-white">

                        Semester {{this.semester}}
                    </a>
                </li>
                <li>
                    <a href="/dashboard/syllabus/{{this.semester}}" class="nav-link text-white">
                        <i class="bi bi-menu-button-wide-fill mr-2"></i>
                        Syllabus
                    </a>
                </li>
                <li>
                    <a href="/dashboard/books/{{this.semester}}" class="nav-link text-white">
                        <i class="bi bi-book-fill mr-2"></i>
                        Books
                    </a>
                </li>
                <li>
                    <a href="/dashboard/notes/{{this.semester}}" class="nav-link text-white">
                        <i class="bi bi-journal-arrow-down mr-2"></i>
                        Notes
                    </a>
                </li>
                <li>
                    <a href="/dashboard/prevyears/{{this.semester}}" class="nav-link text-white">
                        <i class="bi bi-stickies-fill mr-2"></i>
                        Previous Years Papers
                    </a>
                </li>
                <li>
                    <a href="/dashboard/todo/{{this.id}}" class="nav-link text-white">
                        <i class="bi bi-card-checklist mr-2"></i>
                        My Tasks
                    </a>
                </li>
            </ul>
            <hr>
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                    id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
                    <strong>{{this.name}}</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                    <li><a class="dropdown-item" href="/dashboard/todo/{{this.id}}">New task</a></li>
                    <li><a class="dropdown-item" href="/profile.hbs">Profile</a></li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li><a class="dropdown-item" href="/users/logout">Sign out</a></li>
                </ul>
            </div>
        </div>


    </div>
    {{/each}}


    <div class="bg-container-main">
        {{#each userrow}}
        <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard/home">Home</a></li>
                    <li class="breadcrumb-item">Syllabus</li>
                    <li class="breadcrumb-item active" aria-current="page">Semester {{this.semester}}</li>
                </ol>
            </nav>
            <div class="col-4 d-flex justify-content-end">
                    <a href="/dashboard/syllabus/{{this.semester}}/addsubject" type="button" class="btn btn-primary align-self-center">+ add subject</a>
                </div>
        </div>
        {{/each}}

        <div class="bg-container-right-below">

            {{!-- TABLE FOR SYLLABUS --}}
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Subject Code</th>
                        <th scope="col">Subject Name</th>
                        <th scope="col">Credits</th>
                        <th scope="col" class="text-end">Action</th>
                    </tr>
                </thead>
                <tbody>


                    {{#each subjectrows}}
                    <tr>
                        <th scope="row">{{this.subject_code}}</th>
                        <td scope="row">{{this.subject_name}}</td>
                        <td scope="row">{{this.credits}}</td>


                        <td>
                            <a href={{this.syllabus_file_viewlink}} target="_blank"type="button"
                                class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
                            <a href="/dashboard/syllabus/{{this.semester}}/downloadsyllabus/{{this.subject_code}}" type="button" class="btn btn-light btn-small " ><i
                                    class="bi bi-pencil"></i> Download</a>
                            
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>


</body>

</html>